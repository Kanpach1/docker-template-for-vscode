{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "clean",
			"command": "rm",
			"args": [
				"-rf",
				"${workspaceFolder}/build/*"
			],
			"group": {
				"kind": "build"
			}
		},
		{
			"type": "shell",
			"label": "cmake",
			"command": "cmake",
			"args": [
				"-Bbuild",
				"-H.",
				"-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
			],
			"dependsOn": [
				"clean"
			],
			"group": {
				"kind": "build"
			}
		},
		{
			"type": "shell",
			"label": "build",
			"command": "cmake",
			"args": [
				"--build",
				"build"
			],
			"dependsOn": [
				"cmake"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
