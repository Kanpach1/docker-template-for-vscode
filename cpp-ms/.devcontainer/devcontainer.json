{
    "name": "cpp-dev",
    "image": "mcr.microsoft.com/devcontainers/cpp",
    "customizations": {
        "vscode": {
            "settings": {
                "C_Cpp.clang_format_fallbackStyle": "Google",
                "[cpp]": {
                    "editor.defaultFormatter": "ms-vscode.cpptools",
                    "editor.formatOnSave": true,
                    "editor.formatOnPaste": true
                }
            },
            "extensions": [
                "vadimcn.vscode-lldb",
                "jeff-hykin.better-cpp-syntax"
            ]
        }
    }
}
